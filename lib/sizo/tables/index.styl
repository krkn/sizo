table
    width 100%
    margin ( sz-base-spacing / 2 ) 0
    table-layout fixed
    border-collapse collapse

th
    padding ( sz-base-spacing / 2 ) 0
    border-bottom 1px solid darken( sz-base-border-color, 15 )
    font-weight bold
    text-align left

td
    padding ( sz-base-spacing / 2 ) 0
    border-bottom sz-base-border

tr
td
th
    vertical-align middle
