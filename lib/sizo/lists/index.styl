ul
ol
    margin 0
    padding 0
    list-style-type none

/*
    // This form of extends is not available yet in stylus.
    // TODO cf. https://github.com/LearnBoost/stylus/pull/1536

    &$sz-default-ul
        margin-bottom sz-base-spacing / 2
        padding-left sz-base-spacing
        list-style-type disc

    &$sz-default-ol
        margin-bottom sz-base-spacing / 2
        padding-left sz-base-spacing
        list-style-type decimal
*/

$sz-default-ul
    margin-bottom sz-base-spacing / 2
    padding-left sz-base-spacing
    list-style-type disc

$sz-default-ol
    margin-bottom sz-base-spacing / 2
    padding-left sz-base-spacing
    list-style-type decimal

dl
    margin-bottom sz-base-spacing / 2

    dt
        font-weight bold
        margin-top sz-base-spacing / 2

    dd
        margin 0
